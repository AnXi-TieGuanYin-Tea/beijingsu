<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
      >
    
      <ImageView
            android:id="@+id/tabmessage_list_single_alert_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/alert_msg_icon" />
      
      
       <TextView
                android:id="@+id/tabmessage_list_single_title_textview2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tabmessage_list_single_alert_icon2"               
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                 />
       
       
       <TextView
                android:id="@+id/tabmessage_list_single_content2"
                android:layout_below="@id/tabmessage_list_single_title_textview2"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/tabmessage_list_single_title_textview2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"                
                android:maxLength="30"
                android:ellipsize="end"
                android:textColor="@color/dark"
                android:textSize="12sp" />
       
      
          
    
    <TextView
            android:id="@+id/tabmessage_list_single_cattitle_textview2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tabmessage_list_single_title_textview2"
            android:layout_below="@id/tabmessage_list_single_content2"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="left"            
            android:text=""
            android:textColor="@color/bule"
            android:textSize="13sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:ellipsize="end"
             />
    
     <TextView
            android:id="@+id/tabmessage_list_infotype2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"     
            android:layout_centerHorizontal="true"       
            android:gravity="center_horizontal"           
            android:text=""
            android:textColor="@color/bule"
            android:textSize="13sp"
            android:textStyle="normal"
            android:visibility="visible" />
     
      <TextView
            android:id="@+id/tabmessage_list_single_time_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"  
            android:layout_marginRight="10dp"          
            android:textColor="@color/bule"
            android:textSize="13sp"
            android:textStyle="normal" />
      
      <TextView   
          
          android:id="@+id/cancelbutton2"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:background="@drawable/button1bg_selector"
          android:gravity="center"
          android:text="取消收藏"
          android:textColor="@color/white"
          android:textSize="14sp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          />
    
    
</RelativeLayout>


