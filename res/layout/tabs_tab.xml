<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:background="@drawable/tabon" android:id="@+id/tabs_tab_on"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="28dip"
	    android:scaleType="fitCenter" android:id="@+id/tabs_tab_img"
	    android:layout_centerHorizontal="true" 
	    android:layout_marginTop="3dip"/>
    <TextView  android:textSize="11sp"  android:ellipsize="marquee" android:gravity="center" 
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:singleLine="true" android:marqueeRepeatLimit="1" 
        android:text="tab" android:id="@+id/tabs_tab_text" android:textColor="#ffffffff"
     	android:layout_alignParentBottom="true" android:paddingTop="0dip"
     	android:paddingLeft="0dip" android:paddingRight="0dip"
        android:layout_centerHorizontal="true" android:paddingBottom="0dp"
        android:layout_marginBottom="3dip" />
	<View android:layout_width="19dp" android:layout_height="2dp"
	    android:layout_alignLeft="@id/tabs_tab_img" android:layout_alignTop="@id/tabs_tab_img"
	    android:visibility="invisible" android:id="@+id/tabs_tab_bridge"/>

    <com.mine.beijingserv.ui.BadgeView
        android:id="@+id/tabs_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tabs_tab_img"
        android:layout_toRightOf="@id/tabs_tab_bridge"
        android:gravity="center"
        android:text="  "
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>
