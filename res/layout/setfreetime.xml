<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="#fff5f5f5">
    <RelativeLayout
        android:id="@+id/tabmessage_topbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbarbg_nocorner"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="设置免打扰"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/topbar_back"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/topbarback_selector"
            android:layout_margin="4dp" />
      
    </RelativeLayout>

    <!-- 开始时间 -->
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="40dp"
        android:id="@+id/setfreetime_starttime_panel"
        android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" android:background="@drawable/settings_upradius_item_selector">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="开始时间" android:textColor="#ff111111" android:textSize="18sp"
            android:gravity="center" android:padding="0dp" android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="00:00" android:textColor="#ff222222" android:textSize="18sp"
            android:gravity="center" android:padding="0dp" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:layout_marginRight="10dp"
            android:id="@+id/setfreetime_starttime_textview"/>
    </RelativeLayout>
    <!-- 结束时间 -->
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="40dp"
        android:id="@+id/setfreetime_endtime_panel"
        android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:layout_marginTop="2dp" android:background="@drawable/settings_downradius_item_selector">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="结束时间" android:textColor="#ff111111" android:textSize="18sp"
            android:gravity="center" android:padding="0dp" android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="00:00" android:textColor="#ff222222" android:textSize="18sp"
            android:gravity="center" android:padding="0dp" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:layout_marginRight="10dp"
            android:id="@+id/setfreetime_endtime_textview"/>
    </RelativeLayout>
    
    <TextView android:layout_width="260dp" android:layout_height="50dp"
            android:text="确定" android:id="@+id/setfreetime_ok_button"
            android:gravity="center" android:textColor="#ffffffff"
            android:textSize="20sp" android:background="@drawable/buttonbg_selector"
            android:layout_marginTop="20dp" />
    
</LinearLayout>

     
</RelativeLayout>
