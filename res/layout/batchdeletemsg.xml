<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff5f5f5">
    <RelativeLayout
        android:id="@+id/tabmessage_topbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbarbg"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="删除信息"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/topbar_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/topbarback_selector" 
            android:layout_margin="4dp"/>
        <View android:layout_width="40dp" android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/top_show_curvepage" />
    </RelativeLayout>
    
    <ListView
	        android:id="@+id/batchdeletemsg_listview"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="#fff5f5f5"
	        android:divider="#ff999999"
	        android:dividerHeight="2dp" 
	        android:layout_weight="1">
	</ListView>
    
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/batchdelmsg_choose_all"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button4bg_selector"
                android:orientation="vertical" 
                android:gravity="center">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="全部选中"
                    android:textColor="#ff222222" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/batchdelmsg_dischoose_all"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button4bg_selector"
                android:orientation="vertical" 
                android:gravity="center">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="取消选中"
                    android:textColor="#ff222222" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/batchdelmsg_delete_choosed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button4bg_selector"
                android:orientation="vertical" 
                android:gravity="center">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="删除选中"
                    android:textColor="#ff222222" />
            </LinearLayout>
            
        </LinearLayout>
    

</LinearLayout>

       
</RelativeLayout>
